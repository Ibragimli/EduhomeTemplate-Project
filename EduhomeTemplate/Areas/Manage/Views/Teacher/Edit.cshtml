
@{
    ViewData["Title"] = "Edit";
}
@model Teacher
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>NoticeBoard</h2>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit">

                <div class="form-group">
                    <label asp-for="Title">Faculty</label>
                    <input type="text" class="form-control" asp-for="Title" id="faculty" placeholder="Enter Title ">
                </div>
                <div class="form-group">
                    <label asp-for="Level">Level</label>
                    <input type="text" class="form-control" asp-for="Level" id="devel" placeholder="Enter Level ">
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <input type="text" class="form-control" asp-for="Desc" id="desc" placeholder="Enter Desc ">
                </div>
                <div class="form-group">
                    <label asp-for="DescLitlle">DescLitlle</label>
                    <input type="text" class="form-control" asp-for="DescLitlle" id="descLitlle" placeholder="Enter DescLitlle ">
                </div>
                <div class="form-group">
                    <label asp-for="Experience">Experience</label>
                    <input type="text" class="form-control" asp-for="Experience" id="experience" placeholder="Enter Experience ">
                </div>
                <div class="form-group">
                    <label asp-for="Degree">Faculty</label>
                    <input type="text" class="form-control" asp-for="Degree" id="degree" placeholder="Enter Degree ">
                </div>
                <div class="form-group">
                    <label asp-for="Hobbies">Hobbies</label>
                    <input type="text" class="form-control" asp-for="Hobbies" id="hobbies" placeholder="Enter Hobbies ">
                </div>
                <div class="form-group">
                    <label asp-for="Faculty">Faculty</label>
                    <input type="text" class="form-control" asp-for="Faculty" id="faculty" placeholder="Enter Faculty ">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-info" asp-controller="teacher" asp-action="index">Back</a>
            </form>
        </div>
    </div>
</div>

