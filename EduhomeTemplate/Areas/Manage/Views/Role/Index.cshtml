@{
    ViewData["Title"] = "Role Panel";
    int count = 0;
}
@model List<IdentityRole>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex">
                <h2>NoticeBoard</h2>
                <a class="btn btn-primary" asp-action="create">Create new Notice</a>
            </div>

        </div>
        <div class="col-lg-12">
            <table class="table table-success table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@role.Name</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                                <a data-id="@role.Id" class="btn btn-danger deleteBtn">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>


@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}
