
@{
    ViewData["Title"] = "Profile";
}
@model MemberProfileViewModel

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <form method="post" asp-action="profil">
                    <div class="row ">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="labels">Username</label><input disabled asp-for="Username" class="form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Fullname</label><input asp-for="Fullname" class="form-control" placeholder="Fullname">
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="labels">Email </label><input asp-for="Email" class="form-control" placeholder="enter email  ">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12"><label class="labels">Mobile Number</label><input asp-for="PhoneNumber" class="form-control" placeholder="enter phone number"></div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Born/Date</label><input asp-for="BornDate" class="form-control"></div>
                            <span asp-validation-for="BornDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>

                </form>

            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Price</th>
                        <th scope="col">CourseName</th>
                        <th scope="col">Language</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">OrderTime</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.Price</td>
                            <td>@item.CourseName</td>
                            <td>@item.Language</td>
                            <td>@item.Fullname</td>
                            <td>@item.OrderTime</td>
                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>

</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}